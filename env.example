# =============================================================================
# CRYPTO TRADING BOT - Environment Configuration Example
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# Application Settings
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://crypto_bot_user:crypto_bot_password@localhost:5432/crypto_bot
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=crypto_bot
POSTGRES_USER=crypto_bot_user
POSTGRES_PASSWORD=crypto_bot_password

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# Exchange API Keys
# =============================================================================
# Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_SANDBOX=true  # Default: true (sandbox/testnet) for safety. Set to false for production.

# Coinbase
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here
COINBASE_SANDBOX=false

# =============================================================================
# Security
# =============================================================================
# Encryption key for sensitive data (REQUIRED - generate with: openssl rand -hex 32)
# CRITICAL: Must be at least 32 characters. This key encrypts API credentials in the database.
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Encryption salt for additional security (optional but recommended)
# Generate with: openssl rand -hex 16
# ENCRYPTION_SALT=your_encryption_salt_here

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# Trading Configuration
# =============================================================================
# Risk Management
MAX_POSITION_SIZE_PCT=10.0
MAX_PORTFOLIO_RISK_PCT=30.0
DEFAULT_STOP_LOSS_PCT=2.0
DEFAULT_TAKE_PROFIT_PCT=5.0
MAX_DRAWDOWN_PCT=15.0

# Trading Settings
DRY_RUN=true
MAX_CONCURRENT_TRADES=5
DEFAULT_ORDER_TYPE=limit

# =============================================================================
# Monitoring & Logging
# =============================================================================
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001

# Logging
LOG_FILE_PATH=./data/logs/crypto-bot.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_TELEGRAM_NOTIFICATIONS=false
ENABLE_DISCORD_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_MONITORING=true
ENABLE_LOGGING=true
ENABLE_METRICS=true

# =============================================================================
# Performance
# =============================================================================
# Async Settings
MAX_WORKERS=10
TIMEOUT_SECONDS=30

# Cache Settings
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# Health Checks
# =============================================================================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
